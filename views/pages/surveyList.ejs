<%- include('../templates/header'); %>

<main>
    <div class="jumbotron">
        <h1>Lista ankiet</h1>

        <a href="<%=siteUrl%>/survey/new">- Stwórz ankietę</a>
        <br /><br />

        <% for(var i=0; i<surveys.length; i++) {%>
            Ankieta "<%=surveys[i].title%>" 
            <br />
            - <a href="<%=siteUrl%>/survey/show/<%=surveys[i].id%>">Odpowiedz na ankietę</a>
            <br />
            - <a href="<%=siteUrl%>/survey/edit/<%=surveys[i].id%>">Edytuj ankietę</a>
            <br />
            - <a href="<%=siteUrl%>/survey/questions/<%=surveys[i].id%>">Dodaj pytanie</a>
            <br />
            - <a href="<%=siteUrl%>/survey/delete/<%=surveys[i].id%>">Usuń ankietę</a>
            <br />
            <ul>
            <% for(var j=0; j<surveys[i].questions.length; j++) {%>
                <li>
                    Pytanie "<%=surveys[i].questions[j].question%>"
                    <a href="<%=siteUrl%>/survey/question/<%=surveys[i].questions[j].id%>">Edycja</a> 
                    <a href="<%=siteUrl%>/survey/question/delete/<%=surveys[i].questions[j].id%>">Usuń</a> 
                </li>
            <% } %>
            </ul>
         <% } %>
    </div>
</main>

<%- include('../templates/footer'); %>