<%- include('../templates/header'); %>

<main>
    <div class="jumbotron">
        <h1>Rejestracja</h1>

        <div>
        <% if(typeof errors !== 'undefined') { %>
            <% for(var i=0; i < errors.length; i++) { %>
                <%= errors[i].msg %><br />
            <% } 
        } %>
        </div>
        <br />

        <form action="<%=siteUrl%>/register" method="post">
            <label for="username">Nazwa użytkownika: </label>
            <input id="username" type="text" name="username" value="<%=typeof user!='undefined'?user.username:''%>">

            <label for="password">Hasło: </label>
            <input id="password" type="password" name="password">
            
            <label for="email">E-mail: </label>
            <input id="email" type="text" name="email" value="<%=typeof user!='undefined'?user.email:''%>">

            <label for="first_name">Imię: </label>
            <input id="first_name" type="text" name="first_name" value="<%=typeof user!='undefined'?user.first_name:''%>">

            <label for="family_name">Nazwisko: </label>
            <input id="family_name" type="text" name="family_name" value="<%=typeof user!='undefined'?user.family_name:''%>">

            <input type="submit" value="OK">
        </form>
    </div>
</main>

<%- include('../templates/footer'); %>