<%- include('../templates/header'); %>

<main>
    <div class="jumbotron">
        <h1>Profil</h1>

        <form action="<%=siteUrl%>/profile" method="post" >

            <table class="profile"> 
                <tr>
                    <td><label for="password">Nowe hasło: </label></td>
                    <td><input id="password" type="password" name="password"></td>
                </tr>

                <tr>
                    <td><label for="password2">Powtórz hasło: </label></td>
                    <td><input id="password2" type="password" name="password2"></td>
                </tr>
                <tr>
                    <td><label for="email">E-mail: </label></td>
                    <td><input id="email" type="text" name="email" value="<%=typeof user!='undefined'?user.email:''%>"></td>
                </tr>
                <tr>
                    <td><label for="first_name">Imię: </label></td>
                    <td><input id="first_name" type="text" name="first_name" value="<%=typeof user!='undefined'?user.first_name:''%>"></td>
                </tr>
                <tr>
                    <td><label for="family_name">Nazwisko: </label></td>
                    <td><input id="family_name" type="text" name="family_name" value="<%=typeof user!='undefined'?user.family_name:''%>"></td>
                </tr>

                <tr>
                    <td><br /><input type="submit" value="Zmień dane"></td>
                    <td></td>
                </tr>
            </table>
        </form>
    </div>
</main>

<%- include('../templates/footer'); %>